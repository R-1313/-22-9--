#include <math.h>
#include <iostream>
using namespace std;
int main()
{
    {
    int x;
    float y;
    cout <<"X равно = "; cin>>x;
    if (-10<=x && x<0)
    {
        y = -x/2-3;
        cout<<y;
        return 0;
    }
    else
    {
        if(0<x && x<=3)
        {
            y = -sqrt(3*3 - x*x);
            cout<<y;
        }
        else
        {
            if(6<x && x<=8)
            {
                y = 0;
                cout<<y;
            }
            else
            {
                cout<<"Функция не определена";
            }
            }
        }
    }
return 0;
}
